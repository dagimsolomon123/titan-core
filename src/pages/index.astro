---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/defo.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';

const seoTitle = "Modern, High-Performance Astro Theme";
const seoDescription = "A modern, high-performance Astro theme for developer portfolios and documentation sites.";

const heroContent = {
    title: ' Innovating Systems, Empowering Tomorrow.',
    description: 'We craft cutting-edge software solutions that redefine efficiency, innovation, and growth. With a commitment to excellence and a vision for the future, we empower businesses to scale, adapt, and lead in the digital era.',
    buttons: [
        {
            text: 'Get Started',
            link: '/contact',
            target: '_self'
        },
    
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "CORE FEATURES",
    title: "Service We Provide",
    description: "DY Developments is dedicated to delivering innovative software solutions that drive efficiency and business growth.",
    features: featureLists.main.features,
    
}

const FooterCta = {
    eyebrow: "Join The Community",
    title: 'Start Work with Us – Innovating Today for Tomorrow Success.',
    description: 'Start working with us and transform your business with innovative software solutions. At DY Developments, we create custom systems that drive growth, efficiency, and success in the digital world.',
    hideCta: false,
    button: {
        text: 'get started',
        link: './contact',
        target: '_blank'
    }
}



const sideBySideStats = {
    eyebrow: "Stats",
    title: "stats on how many companies we work",
    description: "Titan Core is designed with performance and developer experience in mind. Our lightweight theme gives you all the essentials without the bloat, letting you build exactly what you need with impressive speed.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "STATS ON THE COMPANY WE WORK WITH",
        description: "At DY Developments, we’ve successfully collaborated with diverse companies, delivering scalable solutions that drive efficiency, growth, and innovation..",
       
    }
};






const faqsSection = {
    eyebrow: "FAQs",
    title: 'Frequently Asked Questions',
    description: 'Find answers to common questions about our company and services.',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "PROJECT",
    title: " OUR PROJECTS",
    description: "This is our project list, featuring innovative software solutions designed to enhance efficiency, drive growth, and deliver exceptional user experiences.",
    button: {
            text: "View All Projects",
            link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} category="Theme Usage"/>
    
    
 
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>